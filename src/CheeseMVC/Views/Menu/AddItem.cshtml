@model CheeseMVC.ViewModels.AddMenuItemViewModel
@{
    ViewData["Title"] = "Add Item To Menu";
}

<h2>@ViewData["Title"]</h2>



<div class="container">
    <div class="row">
        <form asp-controller="Menu" asp-action ="AddItem" asp-route-id="@Model.Menu.ID" method="post">
            <div class=" form-group">
                <label asp-for="CheeseID"></label>
                <select class="form-control" asp-for="CheeseID" asp-items="Model.Cheeses"></select>
                <span class="alert-danger" asp-validation-for="CheeseID"></span>
            </div>
            <div class="form-group">
                <input class="form-control"type="submit" value="Add Cheese to (@Model.Menu.Name) Menu"/>
            </div>
        </form>
    </div>
</div>